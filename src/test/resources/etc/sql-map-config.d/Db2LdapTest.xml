	<select id="getObjectTestDb2Ldap" resultClass="java.util.HashMap" parameterClass="java.util.Map">
				SELECT
						id,
						uid,
						sn,
						gn,
						cn,
						mail,
						gn,
						address,
						telephoneNumber,
						telephoneNumber,
						userPassword
				FROM INETORGPERSON
				WHERE gn = #gn# AND sn = #sn#
	</select>

